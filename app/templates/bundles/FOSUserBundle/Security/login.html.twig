{% extends 'base.html.twig' %}

{% block content %}
<main>
    <section class="section">
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="login-form">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token    }}" />
            {% endif %}

            <h1 class="title is-1">Authentification</h1>

            <div class="field">
                <div class="label is-normal">
                    <label for="username" class="label">{{ 'security.login.username'|trans }}</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="label is-normal">
                    <label for="password"  class="label">{{ 'security.login.password'|trans }}</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <label class="checkbox">
                        <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}</label>
                    </label>
                </div>
            </div>






            <input class="button is-link" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
    </section>

</main>

{% endblock %}
